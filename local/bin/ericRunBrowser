#!/usr/bin/env bash

DELAY="1200"
LOGFILE=~/BadVideoLog.txt

if [ -f "$LOGFILE" ]; then
	if [ $(stat --format=%Y $LOGFILE) -le $(($(date +%s) - $DELAY)) ]; then
		echo "No bad videos watched within test time"
		export DISPLAY=:0
		# feh --no-fehbg --bg-max ~/.dotfiles/wallpaper/wallpaper.jpg
		nitrogen --set-scaled ~/.dotfiles/wallpaper/wallpaper.jpg &
		killall firefox
		firefox-developer-edition &
	else
		echo "Bad video watched within test time"
		# feh --no-fehbg --bg-max ~/.dotfiles/wallpaper/no-monster-allowd-sign.jpg
		nitrogen --set-scaled ~/.dotfiles/wallpaper/no-monster-allowd-sign.jpg &
	fi
else
	echo "No bad video log file"
	export DISPLAY=:0
	# feh --no-fehbg --bg-max ~/.dotfiles/wallpaper/wallpaper.jpg
	nitrogen --set-scaled ~/.dotfiles/wallpaper/wallpaper.jpg &
	killall firefox
	firefox-developer-edition &
fi
