#!/usr/bin/env bash

CLASS="firefox"

# Declare a string array with type
declare -a StringArray=(
"aphmau" \
"autopsy" \
"baby" \
"body swap" \
"carrion" \
"containment breach" \
"creepiest" \
"cursed" \
"danger" \
"dangerous" \
"dark angel" \
"dead" \
"demon" \
"dragon" \
"dreams" \
"dying" \
"fortnight" \
"freddy" \
"ghost" \
"girlfriend" \
"goddess" \
"halloween" \
"hardcore" \
"haunted" \
"hell" \
"herobrine" \
"horror" \
"invasion" \
"kills" \
"marvel" \
"mermaid" \
"monster" \
"murder" \
"nightmare" \
# "ninja" \ Power Rangers has Ninja stuff, maybe not block power rangers explicitly?
"observation duty" \
"one who knocks" \
"possessed" \
"problems at the port" \
"puppet" \
"ready or not" \
"roblox" \
"scarier" \
"scary" \
"secret lab" \
"shapeshift" \
"skywalker" \
"slime girl" \
"survival" \
"terrify" \
"werewolf" \
"werewolve" \
"winter ultima" \
"witch" \
"wolf" \
"xbox" \
"zeta" \
"zombie" \
)
 
while true
do
    echo "Waiting to check for bad videos"
    sleep 60
    echo "Checking for bad videos"

    # Read the array values with space
    for val in "${StringArray[@]}"; do
        echo Checking $val
        xdotool search --class $CLASS search  --name $val windowkill
    done

    echo "Checked for bad videos"
done
