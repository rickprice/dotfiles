#! /bin/bash

# Fail script if any command fails
set -e

## keep track of the last executed command
trap 'last_command=$current_command; current_command=$BASH_COMMAND' DEBUG
## echo an error message before exiting
trap 'echo "\"${last_command}\" command failed with exit code $?."' EXIT

## Neovim
yay --noconfirm -S neovim-nightly-bin

## Required for Neovim
sudo pip install neovim
sudo pacman --noconfirm -S nodejs
sudo pacman --noconfirm -S npm
sudo npm install -g neovim
sudo pacman --noconfirm -S ruby
gem install neovim
# sudo cpanm Neovim::Ext
# Can't use noconfirm with this because it defaults to N to delete vi and Vim
yes | LC_ALL=en_US.UTF-8 yay -S neovim-symlinks
yay --noconfirm -S xclip

# Language Servers
yay --noconfirm -S pyright-git
yay --noconfirm -S bash-language-server
yay --noconfirm -S gopls
yay --noconfirm -S vim-language-server
yay --noconfirm -S yaml-language-server

yay --noconfirm -S ctags

# Markdown
yay --noconfirm -S glow

